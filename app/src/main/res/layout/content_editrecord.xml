<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonDinner"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:text="晚餐"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/buttonLunch"
        app:layout_constraintTop_toTopOf="@+id/buttonBreakfast"
        android:layout_marginStart="19dp" />

    <Button
        android:id="@+id/buttonLunch"

        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="19dp"
        android:text="中餐"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/buttonBreakfast"
        app:layout_constraintTop_toTopOf="@+id/buttonBreakfast"
        android:layout_marginStart="19dp" />


    <TextView
        android:id="@+id/show"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:gravity="right"
        android:text="NT$0"
        android:textAlignment="textEnd"
        android:textColor="#9370DB"
        android:textSize="80sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="金額"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/money"
        android:layout_width="259dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/buttonBreakfast"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="早餐"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="26dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="284dp"
        android:text="描述"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/explanation"
        android:layout_width="326dp"
        android:layout_height="157dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="18dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="161dp"
        app:layout_constraintTop_toBottomOf="@+id/money"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="18dp" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="16dp"
        android:text="儲存"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explanation"
        android:layout_marginStart="33dp" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:onClick="cancelButton"
        android:text="取消"
        android:layout_marginRight="33dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/explanation"
        android:layout_marginEnd="33dp" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="日期"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/money"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="259dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/money"
        android:layout_marginEnd="8dp" />


</android.support.constraint.ConstraintLayout>